            android:background="@color/grey"
            android:gravity="center"
            android:text="16"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/q17"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="@color/grey"
            android:gravity="center"
            android:text="17"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/q18"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="@color/grey"
            android:gravity="center"
            android:text="18"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/q19"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="@color/grey"
            android:gravity="center"
            android:text="19"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/q20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:background="@color/grey"
            android:gravity="center"
            android:text="20"
            android:textSize="25sp" />


    </LinearLayout>


</LinearLayout>